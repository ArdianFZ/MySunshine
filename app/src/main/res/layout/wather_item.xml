<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardUseCompatPadding="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">
        <ImageView
            android:id="@+id/wather_item_img"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@mipmap/ic_launcher"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="16dp">
            <TextView
                android:id="@+id/wather_item_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hari ini,11 nopember 2017"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/wather_item_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hujan"/>

        </LinearLayout>
<TextView
    android:id="@+id/wather_item_temp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="right|center_vertical"
    android:text="18"
    android:textSize="36sp"
    android:textStyle="bold"/>

    </LinearLayout>
    <TextView
        android:id="@+id/item_titel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cuac_Hari"
        android:textSize="24sp"
        android:visibility="gone"/>

</android.support.v7.widget.CardView>